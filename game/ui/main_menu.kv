# Main Menu Layout - A Life Is A Random Journey
# Optimizado para APK m√≥vil - Estilo Undertale/Deltarune/Celeste

<MainMenuScreen>:
    orientation: 'vertical'
    spacing: 0
    padding: [15, 15, 15, 15]  # Padding optimizado para m√≥vil
    canvas.before:
        # Fondo negro profundo
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Espaciador superior m√°s peque√±o para m√≥vil
    Widget:
        size_hint: 1, 0.12
    
    # T√≠tulo principal con mejor proporci√≥n m√≥vil
    BoxLayout:
        size_hint: 1, 0.18
        orientation: 'vertical'
        
        Label:
            id: title_label
            text: 'üè† A LIFE\'S\nRANDOM JOURNEY'
            font_size: '18sp'  # Tama√±o optimizado para m√≥vil
            color: 1, 1, 1, 1  # Blanco puro sobre negro
            halign: 'center'
            valign: 'center'
            text_size: self.size
    
    # Subt√≠tulo m√°s legible en m√≥vil
    BoxLayout:
        size_hint: 1, 0.12
        orientation: 'vertical'
        
        Label:
            id: subtitle_label
            text: '‚≠ê A LIFE\'S RANDOM\nJOURNEY ‚≠ê\nRPG de Aventuras'
            font_size: '10sp'  # Tama√±o apropiado para m√≥vil
            color: 1, 1, 0.7, 1  # Amarillo dorado
            halign: 'center'
            valign: 'center'
            text_size: self.size
    
    # Espaciador medio
    Widget:
        size_hint: 1, 0.08
    
    # √Årea de botones principales con mejor espaciado t√°ctil
    BoxLayout:
        size_hint: 1, 0.4
        orientation: 'vertical'
        spacing: 12  # Espaciado t√°ctil apropiado
        padding: [30, 0, 30, 0]  # Padding lateral para m√≥vil
        
        # Bot√≥n Comenzar Aventura - Destacado
        Button:
            id: start_button
            text: '‚ù§Ô∏è COMENZAR\nAVENTURA'
            font_size: '12sp'  # Tama√±o legible en m√≥vil
            size_hint: 1, 0.35
            background_color: 0, 0, 0, 0  # Transparente
            color: 1, 1, 0.7, 1  # Amarillo destacado
            halign: 'center'
            valign: 'center'
            on_release: root.start_new_game()
            canvas.before:
                Color:
                    rgba: 1, 1, 0.7, 1  # Borde amarillo destacado
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            canvas.after:
                Color:
                    rgba: 0.1, 0.1, 0.05, 0.8  # Fondo sutil
                Rectangle:
                    pos: self.pos
                    size: self.size
        
        # Bot√≥n Configuraci√≥n
        Button:
            id: config_button
            text: 'CONFIGURACI√ìN'
            font_size: '11sp'
            size_hint: 1, 0.25
            background_color: 0, 0, 0, 0
            color: 0.8, 0.8, 0.8, 1  # Gris claro
            halign: 'center'
            valign: 'center'
            on_release: root.open_config()
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Borde gris
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1
        
        # Bot√≥n Salir
        Button:
            id: exit_button
            text: 'SALIR DEL JUEGO'
            font_size: '11sp'
            size_hint: 1, 0.25
            background_color: 0, 0, 0, 0
            color: 0.8, 0.8, 0.8, 1
            halign: 'center'
            valign: 'center'
            on_release: root.exit_game()
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1
    
    # Espaciador inferior adaptable
    Widget:
        size_hint: 1, 0.1 